{
	"extends": ["@commitlint/config-conventional"],
	"formatter": "@commitlint/format",
	"rules": {
		"header-max-length": [2, "always", 72],
		"header-case": [1, "always", ["lower-case"]],
		"type-case": [2, "always", "lower-case"],
		"scope-case": [1, "always", "upper-case"],
		"body-case": [1, "always", "sentence-case"],
		"body-empty": [2, "never"],
		"body-max-line-length": [1, "always"],
		"type-enum": [
			2,
			"always",
			["build", "chore", "ci", "docs", "feat", "fix", "hotfix", "docs", "style", "refactor", "test", "revert"]
		]
	}
}
